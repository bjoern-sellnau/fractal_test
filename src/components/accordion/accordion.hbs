<div class="accordion" data-modifier="{{modifier}}" data-open="{{openPanel}}">
    {{#each items}}
    <div class="accordion__header" data-index="i{{@index}}">
        <h2 class="accordion__title">{{title}}</h2>        
    </div>
    <div class="accordion__content" data-index="i{{@index}}">
        {{{content}}}
    </div>
    {{/each}}
</div>